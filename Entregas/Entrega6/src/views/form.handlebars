<main class="flex-grow-1 p-3 m-auto my-2 d-flex w-100">
  
  <section class="w-50">
    <h2 class="text-center">CREATE A NEW PRODUCT!</h2>
  <form style="width: 320px;">
  <div class="mb-3 text-center">
    <label for="title" class="form-label mb-0">Title</label>
    <input type="text" class="form-control" id="title" aria-describedby="emailHelp">
    
  <div class="mb-3 text-center">
    <label for="photo" class="form-label">Photo</label>
    <input type="text" class="form-control" id="photo">
  </div>
  <div class="mb-3 text-center">
    <label for="price" class="form-label">Price</label>
    <input type="number" class="form-control" id="price">
  </div>
  <div class="mb-3 text-center">
    <label for="stock" class="form-label">Stock</label>
    <input type="number" class="form-control" id="stock">
  </div>
  
  <button id="newProduct" type="button" class="w-100 btn btn-danger">CREATE!</button>
</form>
 </section>
</main>
